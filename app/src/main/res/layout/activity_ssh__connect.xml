<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ssh.SSH_Connect">


    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Username" />

    <EditText
        android:id="@+id/sshUsernameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yash" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hostname" />

    <EditText
        android:id="@+id/sshHostnameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="192.168.43.223" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="port" />

    <EditText
        android:id="@+id/sshPortEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password" />

    <EditText
        android:id="@+id/sshPassEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/sshConnectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Connect" /><!--android:onClick="startSshConnection"-->
</LinearLayout>
