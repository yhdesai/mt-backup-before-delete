<?xml version="1.0" encoding="utf-8"?> <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="io.github.yhdesai.makertoolbox.Dev">

    <Button

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="#03A6FF"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:onClick="chat"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Chat"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="#03A6FF"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:onClick="add_todo"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Add Todo"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="#03A6FF"
        android:onClick="library"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Awesome Libraries"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="#03A6FF"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:onClick="profile"
        android:shadowRadius="5"
        android:text="Profile"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="#03A6FF"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:onClick="edit_profile"
        android:shadowRadius="5"
        android:text="Edit Profile"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="#03A6FF"
        android:onClick="intro"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Intro Screen"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="#03A6FF"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:onClick="git"
        android:shadowRadius="5"
        android:text="Github Client"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />
</LinearLayout>
</ScrollView>